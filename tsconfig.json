{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "jsxFactory": "h",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "baseUrl": "src",
    "noEmit": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "importHelpers": false,
    "paths": {
      "@store/*": [
        "store/*"
      ],
      "@pages/*": [
        "pages/*"
      ],
      "@components/*": [
        "components/*"
      ],
      "@helpers/*": [
        "helpers/*"
      ]
    }
  },
  "include": [
    "src"
  ]
}